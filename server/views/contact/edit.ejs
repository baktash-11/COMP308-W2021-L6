<% include ../partials/header.ejs %>
<!-- add page-->


<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
             
            <br>
            <form class="from " method="POST">
                <div class="form-group">
                    <label for="fNameTextField">First Name</label>
                    <!--name is givs us the variable name -->
                    <input type="text"  class="form-control" 
                    id="fNameTextField" placeholder="Enter your First Name" 
                    name="fName" 
                    
                    value="<%= contact.fName %>"
                    required>

                </div>
                <div class="form-group">
                    <label for="lNameTextField">Last Name</label>
                    <!--name is givs us the variable name -->
                    <input type="text"  class="form-control" 
                    id="lNameTextField" placeholder="Enter your Last Name" 
                    name="lName" 
                    
                    value="<%= contact.lName %>"
                    required>

                </div>
                <div class="form-group">
                    <label for="ageTextField">Age</label>
                    <!--name is givs us the variable name -->
                    <input type="text" class="form-control" 
                    id="ageTextField" placeholder="Type your Age"  
                    name="age" 
                    
                    value="<%= contact.age %>"
                    required>

                </div>
                <button type="submit" class="btn btn-info bi bi-save2-fill">&nbsp;Save</button>
                 <a href="/contact-list" class="btn btn-warning bi bi-arrow-counterclockwise "> Cancel</a>
            </form>

        </div>
    </div>
</div>

 
    


