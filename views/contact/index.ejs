<% include ../partials/header.ejs %>
<!-- embed my content-->
<div class="container">

    <div class="row">
        <div  class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <!--button to add new contact -->
            <a href="/contact-list/add" class="btn btn-info bi bi-person-plus-fill">&nbsp;New Contact</a>
            <br>
            
            <table class="table table-bordered table-striped table-hover" >

                <tr class="table-success">
                    <!--Table header -->
                    <th class="text-center" id=''>First Name</th>
                    <th class="text-center" id=''>Last Name</th>
                    <th class="text-center" id=''>Age</th>
                </tr>
                <% for(let count =0; count <contactList.length; count++){%>
                <tr>
                    <td class="text-center"><%=contactList[count].fName %></td>
                    <td class="text-center"><%=contactList[count].lName %></td>
                    <td class="text-center"><%=contactList[count].age %></td>
                </tr>

                <%}%>
            </table>
        </div>
    </div>
</div>
 
    


